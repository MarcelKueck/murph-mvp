# Server Configuration
NODE_ENV=development
PORT=5000
API_PREFIX=/api/v1

# Database Configuration
DATABASE_URL=postgres://postgres:password@localhost:5432/murph_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=murph_db
DB_USER=postgres
DB_PASSWORD=password

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=1d

# File Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Logging
LOG_LEVEL=debug

# CORS
CORS_ORIGIN=http://localhost:3000

# Socket.IO
SOCKET_CORS_ORIGIN=http://localhost:3000
